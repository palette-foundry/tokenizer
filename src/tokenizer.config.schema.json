{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "outputDir": {
            "type": "string"
        },
        "tokens": {
            "type": "object",
            "properties": {
                "palette": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z]+$": {
                            "type": "object",
                            "patternProperties": {
                                "^(50|100|200|300|400|500|600|700|800|900)$": {
                                    "type": "object",
                                    "properties": {
                                        "light": { "type": "string" },
                                        "dark": {
                                            "oneOf": [
                                                { "type": "string" },
                                                {
                                                    "type": "object",
                                                    "patternProperties": {
                                                        "^(@[0-9]+|\\.\\w+|default)$": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "additionalProperties": false
                                                }
                                            ]
                                        }
                                    },
                                    "required": ["light", "dark"],
                                    "additionalProperties": false
                                }
                            }
                        }
                    }
                },
                "color": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-zA-Z]+$": {
                            "oneOf": [
                                { "type": "string" },
                                {
                                    "type": "object",
                                    "patternProperties": {
                                        "^(default|@\\d+|\\.\\w+)$": {
                                            "type": "string"
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            ]
                        }
                    }
                },
                "space": {
                    "type": "object",
                    "patternProperties": {
                        "^\\d+$": { "type": "string" }
                    }
                },
                "borderRadius": {
                    "type": "object",
                    "patternProperties": {
                        "^(none|\\d+|round)$": {
                            "oneOf": [
                                { "type": "string" },
                                {
                                    "type": "object",
                                    "patternProperties": {
                                        "^(default|@\\d+|\\.\\w+)$": {
                                            "oneOf": [
                                                { "type": "string" },
                                                {
                                                    "type": "object",
                                                    "patternProperties": {
                                                        "^(default|@\\d+|\\.\\w+)$": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "additionalProperties": false
                                                }
                                            ]
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            ]
                        }
                    }
                },
                "font": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-zA-Z0-9]+$": {
                            "type": "object",
                            "patternProperties": {
                                "^(default|@\\d+|\\.\\w+)$": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false
                        }
                    }
                }
            },
            "required": ["palette"]
        }
    },
    "required": ["outputDir", "tokens"],
    "additionalProperties": false
}
